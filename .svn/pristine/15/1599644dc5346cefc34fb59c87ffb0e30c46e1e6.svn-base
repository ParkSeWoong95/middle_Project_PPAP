{% extends 'layout_user.html' %}
<meta charset="UTF-8">

{% block content %}

<style>
	h3{
		padding: 20px;
	}
	#his_ser{
		margin-left: 75%;
		padding: 20px;
	}
	#box_post{
		 width: 100%;
	}
	#refu{
		color:white;
		width:100%;
		height:50px;
		text-align: center;
		background-color: black
	}
	#refund_y{
		color: red;
		text-align: center;
		height: 5px;
	}
</style>	
  
<!-- Main -->
<section id="main">
	<div class="container">
		<div>
			<!-- Content -->
			<article class="box post" id="box_post">
				<h3>정기권 환불</h3>
				<table border="1" >
					<thead>
						<tr>
							<th>순번</th>
							<th>요금제</th>
							<th>차량번호</th>
							<th>대여날짜</th>
							<th>대여종료일</th>
							<th>환불요금</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for i, t in enumerate(list) %}
						<tr>
							<td>{{i}}</td>
							<td>{{t.prod_name}}</td>
							<td>{{t.mem_carnum}}</td>
							<td>{{t.ticket_sdate}}</td>
							<td>{{t.ticket_edate}}</td>
							<td>{{t.prod_price}}</td>
							{% if t.refund_yn=='y' %}
								<td id="refund_y">환불완료</td>
							{% else %}
								<td><input type="button" id="refu" value="환불" onclick="t_refund('{{t.ticket_seq}}')"></td>
							{% endif %}
								
						
						</tr>
						{% endfor %}
								
					</tbody>
				</table>
			</article>
		</div>	
	</div>
</section>

<script type="text/javascript">

function t_refund(ticket_seq){
	alert(ticket_seq)
	if (confirm("정말 환불하시겠습니까?") == true){    //확인
		location.href="k_buy_cancel?ticket_seq="+ ticket_seq;

	}else{   //취소

		return false;

	}
}

</script>

{% endblock %}