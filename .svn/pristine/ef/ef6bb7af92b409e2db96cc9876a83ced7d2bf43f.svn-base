<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Test">
	<select id="select_list">
		select 
			mem_carnum, 
			mem_name, 
			mem_email, 
			mem_tel, 
			mem_pw, 
			mem_ticket_yn, 
			mem_exit_yn, 
			mem_black_yn, 
			sign_date,
			signout_date,
			mem_yn
		from 
			members
		order by sign_date
	</select>
	
	<select id="select">
		select 
			mem_carnum, 
			mem_name, 
			mem_email, 
			mem_tel, 
			mem_pw, 
			mem_ticket_yn, 
			mem_exit_yn, 
			mem_black_yn, 
			sign_date,
			signout_date,
			mem_yn
		from 
			members
		where
			mem_carnum=:1
		order by sign_date
	</select>
	
	<select id="find_list">
		select 
			mem_carnum, 
			mem_name, 
			mem_email, 
			mem_tel, 
			mem_pw, 
			mem_ticket_yn, 
			mem_exit_yn, 
			mem_black_yn, 
			sign_date,
			signout_date,
			mem_yn
		from 
			members
		where
			mem_name=:1
		and
			mem_email=:2
		order by sign_date
	</select>
	
	<select id="select_login">
		select 
			mem_carnum, 
			mem_name, 
			mem_email, 
			mem_tel, 
			mem_pw, 
			mem_ticket_yn, 
			mem_exit_yn, 
			mem_black_yn, 
			sign_date,
			signout_date,
			mem_yn
		from 
			members
		where 
			mem_carnum=:1 and
			mem_pw=:2
	</select>
	
	<update id="insert">
		insert into 
		members
		(
			mem_carnum, 
			mem_name, 
			mem_email, 
			mem_tel, 
			mem_pw, 
			mem_ticket_yn, 
			mem_exit_yn, 
			mem_black_yn, 
			sign_date,
			signout_date,
			mem_yn
		) 
		values
		(
			:1, 
			:2, 
			:3, 
			:4, 
			:5, 
			'n', 
			'n', 
			'n', 
			to_char(sysdate, 'YYYY-MM-DD'),  
			'n',  
			:6
		)
	</update>
	
	<update id="update">
		update 
			members 
		set 
			mem_exit_yn='y'
		where 
			mem_carnum=:1
	</update>
		
	<update id="mp_update">
		update 
			members 
		set 
			mem_name	=:1, 
			mem_email	=:2, 
			mem_tel		=:3, 
			mem_pw		=:4
		where 
			mem_carnum=:5
	</update>
	
	<update id="update_pw">
		update 
			members 
		set 
			mem_pw = :1
		where 
			mem_carnum=:2
	</update>
	
	<update id="update_mgr">
		update
			members
		set
			mem_name =:1, 
			mem_email =:2, 
			mem_tel =:3, 
			mem_pw =:4, 
			mem_ticket_yn =:5, 
			mem_exit_yn =:6, 
			mem_black_yn =:7, 
			signout_date =:8,
			mem_yn =:9
		where
			mem_carnum =:10
	</update>
	
	<delete id="delete_mgr">
		delete from members where mem_carnum =:1
	</delete>
	
</mapper>