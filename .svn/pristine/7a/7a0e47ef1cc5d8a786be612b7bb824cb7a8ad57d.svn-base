	{% extends 'layout_admin.html' %}
<meta charset="UTF-8">

{% block content %}

<style>
	
	button{
		float:right;
	}
	table{
		text-align: center;
	}

	#td_sec{
		border-spacing: 20px;
		padding: 0;
		padding-right: 15px;
	}
	
	#tb_2 th{
		padding-right: 120px;
		text-align: center;
	}
	
	.th_1{
		text-align: center;
	}
	#tb_1 th{
		margin-top: 20px;
	}
	input[name='change']{
		float: right;
	}
	input[name='delete']{
		float: right;
	}
	input[type='button']{
		float: right;
		margin: 10px;
	}
</style>

<!-- Main -->
				<section id="main">
	<div class="container">

		<!-- Content -->
			<article class="box post">
				<a href="#" class="image featured">
					<img src="" alt="" />
				</a>
				<header>
					<h2>금액변경</h2>
				</header>
					<div>
						<table border="2" id="tb_1">
							<tr>
								<td>개월수</td>
								<td>가격</td>
								<input hidden="" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" value="추가">
							</tr>
							{% for s in list %}
								{% if s.prod_dcode == "정기권" %}
								<tr id="{{s.prod_code}}">
									<td>{{s.prod_name}}</td>
									<td>
										<input type="hidden" value="{{s.prod_code}}">
										<input type="text" value='{{s.prod_price}}'>
										<input type="button" name="change" value="변경" onclick ="fn_upd_price('{{s.prod_code}}')">
										<input hidden="" type="button" name="delete" value="삭제" onclick ="fn_del_price('{{s.prod_code}}')">
									</td>
								</tr>
								{% endif %}
							{% endfor %}
						</table>
						
						<!-- ------------------------------------------------------------------------------------------------ -->
						<table border="2" id="tb_1">
							<tr>
								<td>개월수</td>
								<td>가격</td>
							</tr>
							{% for s in list %}
								{% if (s.prod_dcode == "일일권") or (s.prod_dcode == "후불권") %}
								<tr id="{{s.prod_code}}">
									<td>{{s.prod_name}}</td>
									<td>
										<input type="hidden" value="{{s.prod_code}}">
										<input type="text" value='{{s.prod_price}}'>
										<input type="button" name="change" value="변경" onclick ="fn_upd_price('{{s.prod_code}}')">
										<input hidden="" type="button" name="delete" value="삭제" onclick ="fn_del_price('{{s.prod_code}}')">
									</td>
								</tr>
								{% endif %}
							{% endfor %}
						</table>
					</div>
			</article>
	</div>
</section>

<!-- The Modal 1 -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">가격추가</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

		<!-- Modal body -->
		<div class="modal-body">
			 <form class="user" action="ad_price_mod_ins" method="post" enctype="multipart/form-data" name="register">
	               <div class="form-group row">
	                   <div style="margin:20px;" class="form-group">
	                   		<input type="radio" name="ad_price_mod_insdcode" value="정기권">정기권
	                   		<input type="radio" name="ad_price_mod_insdcode" value="일일권">일일권
	                   </div>
	                   <div class="col-sm-6 mb-3 mb-sm-0">
	                   		<input type="text" name="ad_price_mod_insname" value="" placeholder="예)2개월 정기권">
	                   </div>
	               </div>
	               <div class="form-group">
	                   <input type="text" id="price" name="ad_price_mod_insprice" class="form-control form-control-user" placeholder="가격">
	               </div>
	               <hr>
	               <input type="submit" value="추가하기">
            </form>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">닫기</button>
      </div>
    </div>
  </div>
</div>
<!-- 모달 끝 -->


<script>
function fn_upd_price(prod_code){
	var prod_code = $("#" + prod_code + " input[type=hidden]").val()
	var prod_price = $("#" + prod_code + " input[type=text]").val();
	
	console.log(prod_code)
	console.log(prod_price)
	var param = "";
	param += "dummy=" + Math.random();
	param += "&prod_price=" + prod_price
	param += "&prod_code=" + prod_code
	
	$.ajax({
		url : "ad_price_mod_upd.ajax",
		data : param,
		dataType : "json",
		type : "post",
		async : false,
		statusCode : {
			404 : function() {
				alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
			}
		},
		success : function(data) {
			if(data.msg == "ok"){
				location.reload();
			} else{
				alert("오류발생")
			}
			console.log(data.msg)
		}
	});
}

function fn_del_price(prod_code){
	var param = "";
	param += "dummy=" + Math.random();
	param += "&prod_code=" + prod_code

	$.ajax({
		url : "ad_price_mod_del.ajax",
		data : param,
		dataType : "json",
		type : "post",
		async : false,
		statusCode : {
			404 : function() {
				alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
			}
		},
		success : function(data) {
			if(data.msg == "ok"){
				location.reload();
			} else{
				alert("삭제 도중 문제가 생겼습니다")
			}
		}
	});
}
</script>
{% endblock %}