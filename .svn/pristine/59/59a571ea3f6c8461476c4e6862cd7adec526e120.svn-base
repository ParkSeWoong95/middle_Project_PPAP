{% extends 'layout_user.html' %}
<meta charset="UTF-8">

{% block content %}

<style>
#box_post{
	margin-left: 4%;
}
</style>
  
<!-- main -->
<section id="main">
	<div class="container">
		<div>
		<!-- Content -->
			<article class="box post" id="box_post">
				<h3>회원정보변경</h3>
				<br>
				<form>
					<div>
						<div>
							<label>이름:</label>
							<input type="text" id="mem_name" value="{{list[0].mem_name}}">
						</div>
							
						<div>
							<label>이메일:</label>
							<input type="text" id="mem_email" value="{{list[0].mem_email}}">
						</div>
							
						<div>
							<label>차량번호:</label>
							<input type="text" id="mem_carnum" value="{{list[0].mem_carnum}}" readonly>
						</div>
							
							
							
						<div>
							<label>비밀번호:</label>
							<input type="password" id="mem_pw" value="{{list[0].mem_pw}}">
						</div>
											
							
						<div>
							<label>전화번호:</label>
							<input type="text" id="mem_tel" value="{{list[0].mem_tel}}">
						</div>	
						<br>
						<div>
							<input type="button" onclick="fn_upd()" value="수정">
						</div>
					</div>
				</form>
			</article>
		</div>
	</div>
</section>
<script>
function fn_upd() {
	var mem_carnum = $("#mem_carnum").val();
	var mem_name = $("#mem_name").val();
	var mem_email = $("#mem_email").val();
	var mem_tel = $("#mem_tel").val();
	var mem_pw = $("#mem_pw").val();
	
	
	if(mem_name == ""){
		alert("이름 입력하세요.")
		$("#mem_name").focus();
		return;
	}
	
	if(mem_email == ""){
		alert("이메일을 입력하세요.")
		$("#mem_email").focus();
		return;
	}
	
	if(mem_tel == ""){
		alert("전화번호를 입력하세요.")
		$("#mem_tel").focus();
		return;
	}
	
	if(mem_pw == ""){
		alert("비밀번호를 입력하세요.")
		$("#mem_pw").focus();
		return;
	}
	
	if(mem_name.length <= 2 || mem_name.length >= 6  ){
		alert("이름의 길이를 확인하세요.")
		$("#mem_name").focus();
		return;
	}

	var regExp = /^\d{3}\d{4}\d{4}$/;
	if(!regExp.test(mem_tel)) {
		alert("올바른 전화번호 형식이 아닙니다. 다시 입력해주세요.")
		$("#mem_tel").focus();
		return;
	}

	var emailRule = /^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*.[a-zA-Z]{2,3}$/i;//이메일 정규식
	if(!emailRule.test(mem_email)) {
		alert("올바른 이메일의 형식이 아닙니다. 다시 입력해주세요.")
		$("#mem_email").focus();
		return;
	}

	var param = ""
	param += "&mem_carnum=" + mem_carnum
	param += "&mem_name=" + mem_name
	param += "&mem_email=" + mem_email
	param += "&mem_tel=" + mem_tel
	param += "&mem_pw=" + mem_pw


	$.ajax({
		url : "u_info_mod_upd.ajax",
		data : param,
		dataType : "json",
		type : "post",
		async : false,
		statusCode : {
			404 : function() {
				alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
			}
		},
		success : function(data) {
			if(data.msg == "ok"){
				alert("정상적으로 수정되었습니다")
				location.href = "u_mypage";
			} else{
				alert("수정 도중 문제가 생겼습니다")
			}
		}
	});
}	
</script>


{% endblock %}