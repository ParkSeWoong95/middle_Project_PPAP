{% extends 'layout_notice.html' %}
<meta charset="UTF-8">
{% block content %}
<html>
<style type="text/css">
		
.detail_link, .detail_link:link, .detail_link:visited {
	color: black;
	text-decoration: none;
}

input[type="button"] {
	background: black; 
	font-size : 14px;
}

.button_box {
	position: absolute;
	left: 76%;
	transform: translateX(-50%);
}

#first_box{
	width:33%;
	height:100%;
	float:left; 
	vertical-align: bottom; 
	display: table-cell;
	font-size : 1.4em;
	padding-top : 1.5em;
	text-align: right;
	padding-right: 0.5em;
}

#second_box{
	width:34%;
	float:left;
	text-align: center;
	padding-top : 1.5em;
	font-size : 1.3em;
}

#third_box{
	width:33%;
	float: right; 
	text-align: left;
	font-size : 1.3em;
	padding-top : 1.5em;
	padding-left: 2.0em;
}

input[type="text"] {
	width : 80%;
	height : 40px;
	font-size : 1.3em;
	text-align: center;
}

table{
	border: 1px; 
	width:80%; 
	text-align: center; 
	margin-left: 10%;
	margin-right: 10%;
}

#search_result{
	display: none;
}

</style>

<!-- Main -->
<section id="main">
	<div class="container">

		<!-- Content -->
		<article class="box post">
			<header>
				<br><br>
				<h2 style='text-align:center; font-size:50px;'><a class="detail_link" href="b_tow">견인내역 조회</a></h2>
				<br>
			</header>
			<br>
			<section>
			<div style="display: flex;">
				<div class="search_box" id="first_box">차량번호 입력</div>
				<div class="search_box" id="second_box"><input type="text" id="carnum"></div>
				<div class="search_box" id="third_box"> 
					<div><input type="button" value="검색" onclick="fn_search()"></div>
				</div>
			</div>
			</section>
			<section id="search_result">
			
			</section>
			
		</article>
	</div>
</section>

<script>
function fn_search() {
	var carnum = $("#carnum").val();
	var carnum = carnum.trim(); 
	var carnum = carnum.replace(/ /g,""); 
	//ajax 파트
	var param = "";
	
	param += "dummy=" + Math.random();
	param += "&carnum=" + carnum

	$.ajax({
		url : "search_tow.ajax",
		data : param,
		dataType : "json",
		type : "post",
		async : false,
		statusCode : {
			404 : function() {
				alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
			}
		},
		success : function(data) {
			if(data.msg == "ok"){
				var search_result = document.getElementById("search_result");
				search_result.style.display = "block";
				var list = data.list;
				console.log(list);
				var txt = ""
				txt += "<table>"+"\n";
				txt += "	<tr>"+"\n";
				txt += "		<td>"+"\n";
				txt += "			차량번호"+"\n";
				txt += "		</td>"+"\n";
				txt += "		<td>"+"\n";
				txt += "			견인날짜"+"\n";
				txt += "		</td>"+"\n";
				txt += "		<td>"+"\n";
				txt += "			견인사유"+"\n";
				txt += "		</td>"+"\n";
				txt += "	</tr>"+"\n";
				
				for (i = 0; i < list.length; i++) {
					txt += "	<tr>"+"\n";
					txt += "		<td>"+"\n";
					txt += "			"+list[i].mem_carnum+"\n";
					txt += "		</td>"+"\n";
					txt += "		<td>"+"\n";
					txt += "			"+list[i].tow_date+"\n";
					txt += "		</td>"+"\n";
					txt += "		<td>"+"\n";
					txt += "			"+list[i].tow_reason+"\n";
					txt += "		</td>"+"\n";
					txt += "	</tr>"+"\n";
				}
				txt += "</table>"+"\n";
				$('#search_result').html(txt);
			} else {
				alert("해당 차량으로 검색된 견인내역이 없습니다.")
			}
			$("#carnum").val(''); //차량번호 입력칸 초기화
		}
	});
}

</script>

</html>
{% endblock %}