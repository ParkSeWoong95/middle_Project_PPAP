<script type="text/javascript">
	function fn_login() {

		var mem_carnum = $("#mem_carnum").val();
		var mem_pw = $("#mem_pw").val();
		
		if (mem_carnum == "") {
			alert("차량번호를 입력해주세요.");
			return;
		} else if (mem_pw == "") {
			alert("비밀번호를 입력해주세요.");
			return;
		}
		
		
		var param = "";
		param += "dummy=" + Math.random();
		param += "&mem_carnum=" + mem_carnum
		param += "&mem_pw=" + mem_pw

		$.ajax({
			url : "login.ajax",
			data : param,
			dataType : "json",
			type : "post",
			async : false,
			statusCode : {
				404 : function() {
					alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
				}
			},
			success : function(data) {
				if (data.msg == "ok" && data.mem_carnum == "admin") {
					location.href = "ad_user_mgr"
				}else if(data.msg == "ok"){
					location.href = "main"
				}else {
					alert("차량번호 혹은 비밀번호가 맞지 않습니다")
				}
				console.log(data.msg)
			}
		});
	}
	
	//아이디찾기	
	function fn_find(){
		var mem_name = $("#mem_name").val();
		var mem_name = mem_name.trim(); 
		var mem_name = mem_name.replace(/ /g,""); 
		
		var email = $("#email").val();
		
		var param = "";
		param += "dummy=" + Math.random();
		param += "&mem_name=" + mem_name
		param += "&email=" + email
		
		$.ajax({
			url : "find.ajax",
			data : param,
			dataType : "json",
			type : "post",
			async : false,
			statusCode : {
				404 : function() {
					alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
				}
			},
			success : function(data) {
				if(data.msg == "ok"){
					alert("이메일을 발송했습니다. 이메일을 확인해주세요.")
					location.href = "login"
				} else{
					alert("해당 정보로 가입된 회원이 없습니다.")
				}
			}
		});
	}
	
	//비밀번호 찾기
	function fn_find_pw() {
		var carnum = $("#carnum_pw").val();
		var carnum = carnum.trim(); 
		var carnum = carnum.replace(/ /g,"");
		
		var mem_name = $("#mem_name_pw").val();
		var mem_name = mem_name.trim(); 
		var mem_name = mem_name.replace(/ /g,""); 
		
		var email = $("#email_pw").val();
		
		var param = "";
		param += "dummy=" + Math.random();
		param += "&carnum=" + carnum
		param += "&mem_name=" + mem_name
		param += "&email=" + email
		
		$.ajax({
			url : "find_pw.ajax",
			data : param,
			dataType : "json",
			type : "post",
			async : false,
			statusCode : {
				404 : function() {
					alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
				}
			},
			success : function(data) {
				if(data.msg == "ok"){
					alert("이메일로 임시비밀번호를 발급해드렸습니다. 이메일을 확인해주세요.")
					location.href = "main"
				} else{
					alert("해당 정보로 가입된 회원이 없습니다.")
				}
			}
		});
	}
	
	
	//중복확인여부 변수
	var flag_dupl = true;
	
	//회원가입
	function fn_register(){
		var mem_name = $("#mem_name_re").val();
		var mem_name = mem_name.trim(); 
		var mem_name = mem_name.replace(/ /g,""); 
		
		var email = $("#email_re").val();
		var carnum = $("#carnum_re").val();
		var carnum = carnum.trim(); 
		var carnum = carnum.replace(/ /g,""); 
		
		var mem_tel = $("#mem_tel_re").val();
		var mem_tel = mem_tel.replace(/\-/g,""); 
		
		var pwd = $("#pwd_re").val();
		var pwd_check = $("#pwd_check_re").val();
		
		
		if (carnum == "admin") {
			alert("사용할 수 없는 차량번호입니다. 다시 입력해주세요.")
			$("#carnum").focus();
			return;
		}
		
		if(mem_name == ""){
			alert("이름을 입력하세요.")
			$("#mem_name").focus();
			return;
		}
		
		if(email == ""){
			alert("이메일을 입력하세요.")
			$("#email").focus();
			return;
		}
		
		if(mem_tel == ""){
			alert("전화번호를 입력하세요.")
			$("#mem_tel").focus();
			return;
		}
		
		if(carnum == ""){
			alert("차량번호를 입력하세요.")
			$("#carnum").focus();
			return;
		}
		
		if(pwd == ""){
			alert("비밀번호를 입력하세요.")
			$("#pwd").focus();
			return;
		}
		if(pwd_check == ""){
			alert("비밀번호 확인을 입력하세요.")
			$("#pwd_check").focus();
			return;
		}
		
		if(flag_dupl){
			alert("중복체크를 해주세요.")
			$("#carnum").focus();
			return;
		}
		
		if(mem_name.length <= 2 || mem_name.length >= 6  ){
			alert("이름의 길이를 확인하세요.")
			$("#first_name").focus();
			return;
		}
		
		var regExp = /^\d{3}\d{4}\d{4}$/;
		if(!regExp.test(mem_tel)) {
			alert("올바른 전화번호 형식이 아닙니다. 다시 입력해주세요.")
			$("#mem_tel").focus();
            return;
		}
		
		var emailRule = /^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*.[a-zA-Z]{2,3}$/i;//이메일 정규식
		if(!emailRule.test(email)) {
			alert("올바른 이메일의 형식이 아닙니다. 다시 입력해주세요.")
			$("#email").focus();
	        return;
		}
		
		if (pwd != pwd_check) {
			alert("비밀번호 확인이 정상적으로 이루어지지 않았습니다. 다시 입력해주세요.")
			$("#pwd").focus();
			return;
		}
		
		var param = "";
		param += "dummy=" + Math.random();
		param += "&mem_name=" + mem_name
		param += "&email=" + email
		param += "&carnum=" + carnum
		param += "&mem_tel=" + mem_tel
		param += "&pwd=" + pwd
		
		$.ajax({
			url : "join.ajax",
			data : param,
			dataType : "json",
			type : "post",
			async : false,
			statusCode : {
				404 : function() {
					alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
				}
			},
			success : function(data) {
				if(data.msg == "ok"){
					alert("회원가입이 완료되었습니다.")
					location.href = "main"
				} else{
					alert("회원가입 도중 문제가 생겼습니다.")
				}
			}
		});
	}
	
	//중복확인
	function fn_dupl() {
		var carnum = $("#carnum_re").val();
		var carnum = carnum.trim(); 
		var carnum = carnum.replace(/ /g,"");
		
		if(carnum == ""){
			alert("차량번호를 입력하세요.")
			$("#carnum").focus();
			return;
		}
		
		var pattern1 = /\d{2}[가-힣ㄱ-ㅎㅏ-ㅣ\x20]\d{4}/g; //12가1234
		var pattern2 = /\d{3}[가-힣ㄱ-ㅎㅏ-ㅣ\x20]\d{4}/g; //123가1234
		if(!pattern1.test(carnum) && !pattern2.test(carnum)){
			alert("올바른 차량번호가 아닙니다. 다시 입력해주세요.")
			$("#carnum").focus();
			return;
		}
		
		var param = "";
		param += "dummy=" + Math.random();
		param += "&carnum=" + carnum;

		$.ajax({
			url : "dupl.ajax",
			data : param,
			dataType : "json",
			type : "post",
			async : false,
			statusCode : {
				404 : function() {
					alert("네트워크가 불안정합니다. 다시 시도부탁드립니다.");
				}
			},
			success : function(data) {
				if(data.msg == "ok"){
					flag_dupl = false;
					alert("사용할 수 있는 차량번호입니다.")
				} else{
					alert("이미 등록된 차량번호입니다")
				}
			}
		});
	}
	
	
	
	
</script>
<!-- Main -->
