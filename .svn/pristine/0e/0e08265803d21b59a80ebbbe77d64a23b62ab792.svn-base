{% extends 'layout_login.html' %}
<meta charset="UTF-8">

{% block content %}

<style>
	#main{
		height: 600px;
	}
	#box_post_one{
		margin-left: 25%;
		padding-right: 10%;
		float : left;
		height: 500px;
		margin-bottom: 0;
	}
	#box_post_two{
		padding-right: 5%;
		height: 500px;
		float : right;
	}
	#btn_move{
		margin-left: 20%;
	}
	.container{
		width: 100%;
	}
	.block_con{
		height: 100px;
		margin-left: 30px;
	}
	.block_con input{
		width: 100%; 
