<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Test">
	<select id="select_list">
		select 
			bsug_seq, 
			bsug_title, 
			bsug_content, 
			bsug_filename, 
			bsug_filepath, 
			bsug_hit, 
			in_date, 
			in_user_id, 
			up_date, 
			(select mem_name from members m where m.mem_carnum = b.in_user_id) in_user_name
 		from 
 			bsug b
 		order by
 		 	bsug_seq desc
	</select>
	<select id="select">
		select 
			bsug_seq, 
			bsug_title, 
			bsug_content, 
			bsug_filename, 
			bsug_filepath, 
			bsug_hit, 
			in_date, 
			in_user_id, 
			up_date,
			mem_carnum,
			(select mem_name from members m where m.mem_carnum = b.in_user_id) in_user_name
 		from 
 			bsug b
 		where  
 			bsug_seq = :1 
 			
	</select>	
	
	<update id="insert">
		insert into bsug 
		(
			bsug_seq, 
			bsug_title, 
			bsug_content, 
			bsug_filename, 
			bsug_filepath, 
			bsug_hit, 
			in_date, 
			in_user_id, 
			up_date, 
			mem_carnum
		) 
		values
		(	
			bsug_seq.nextval,
			:1, 
			:2, 
			:3,
			:4, 
			'0',
			to_char(sysdate, 'yyyy-mm-dd hh24:mi'), 
			:5,
			to_char(sysdate, 'yyyy-mm-dd hh24:mi'),
			:6
 		)
	</update>
	<update id="update">
		update 
			bsug 
		set 
			bsug_title			=:1, 
			bsug_content		=:2, 
			bsug_filename		=:3, 
			bsug_filepath		=:4, 
			up_date				= to_char(sysdate, 'YYYYMMDD.HH24MISS')
		where 
			bsug_seq			=:5
	</update>
	
	<update id="del_img">
		update 
			bsug 
		set 
			bsug_filename		= '', 
			bsug_filepath		= '',
			up_date				= to_char(sysdate, 'YYYYMMDD.HH24MISS'), 
			in_user_id			=:1
		where 
			bsug_seq=:2
	</update>
	
	<update id="hits">
		update 
			bsug 
		set 
			bsug_hit			=bsug_hit+1
		where 
			bsug_seq=:1
	</update>
	
	<update id="delete">
		delete from bsug 
		where 
			bsug_seq= :1
	</update>
</mapper>